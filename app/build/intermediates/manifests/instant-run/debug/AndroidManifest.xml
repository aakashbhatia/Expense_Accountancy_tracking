<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aakashbhatia.demo_2_textbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Expense Accountancy Tracking"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.aakashbhatia.demo_2_textbox.MainActivity"
            android:label="Expense Accountancy Tracking"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.aakashbhatia.demo_2_textbox.home"
            android:label=" "
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.aakashbhatia.demo_2_textbox.registration"
            android:label="Registration Form" />
        <activity
            android:name="com.example.aakashbhatia.demo_2_textbox.content_home"
            android:label="Detailed Expenses List" />
        <activity
            android:name="com.example.aakashbhatia.demo_2_textbox.splashscreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/splashScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.example.aakashbhatia.demo_2_textbox.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>